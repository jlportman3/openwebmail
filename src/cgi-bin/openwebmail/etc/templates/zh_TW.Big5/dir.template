   }
   function anyfileselected()
   {
      for (var i=0;i<document.dirform.elements.length;i++)
      {
         var e = document.dirform.elements[i];
         if (e.type == 'checkbox' && 
             e.name != 'showthumbnail' &&
             e.name != 'showhidden' && 
             e.name != 'singlepage' &&
             e.name != 'allbox' && 
             e.checked == 1 ) {
            return true;
         }
      }
      alert("你還未選擇任何的目錄或檔案.");
      return false;
   }
   function selectedstr()
   {
      var str = '';
      for (var i=0;i<document.dirform.elements.length;i++)
      {
         var e = document.dirform.elements[i];
         if (e.type == 'checkbox' && 
             e.name != 'showthumbnail' &&
             e.name != 'showhidden' && 
             e.name != 'singlepage' &&
             e.name != 'allbox' && 
             e.checked == 1 ) {
            var p = document.getElementById('p_'+e.id);
            if (str == '') {
               str=p.value;
            } else {
               str=str+', '+p.value;
            }
         }
      }
      return(str);
   }
   function destnamefilled(target) {
      if (document.dirform.destname.value == '') {
         alert('請先填入 < '+target+' > .');
         return false;
      } else {
         return true;
      }
   }
   function uploadfilled() {
      if (document.dirform.upload.value == '') {
         alert("請先選擇要上傳檔案.");
         return false;
      } else {
         document.dirform.msg.value = '檔案 '+document.dirform.upload.value+' 上傳中, 請稍待...';
         return true;
      }
   }
   function opconfirm(op, conf) {
      if (conf) {
         return(confirm('你確定要 '+op+' 已選擇的項目嗎? ( '+selectedstr()+' )'));
      } else {
         return true;
      }
   }
   function chmodinput() {
      var oldperm=document.dirform.permission.value;
      var newperm;
      newperm=prompt('請輸入已選擇項目的存取權限 ( '+selectedstr()+' )\n\n'+
                     '權限設定範例:\n'+
                     '0755 公用目錄 , 0644 公用檔案\n'+
                     '0700 私人目錄 , 0600 私人檔案', oldperm);
      if ( newperm==oldperm ||
           newperm==null ) {
         return false;
      } else {
         document.dirform.permission.value=newperm;
         return true;
      }
   }
