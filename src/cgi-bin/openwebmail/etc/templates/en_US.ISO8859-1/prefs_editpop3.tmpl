  <td class="<tmpl_if __odd__>rowdark<tmpl_else>rowlight</tmpl_if>" align="center">
    <form method="post" action="<tmpl_var url_cgi>/openwebmail-prefs.pl" name="deletepop3form">
    <input type="hidden" name="action" value="deletepop3">
    <input type="hidden" name="pop3host" value="<tmpl_var pop3host>">
    <input type="hidden" name="pop3port" value="<tmpl_var pop3port>">
    <input type="hidden" name="pop3user" value="<tmpl_var pop3user escape="html">">
    <tmpl_loop standardparamsloop>
    <input type="hidden" name="<tmpl_var name>" value="<tmpl_var value escape="html">">
    </tmpl_loop>
    <input type="submit" name="deletepop3submit" value="Delete"></td>
    </form>
  </td>
</tr>
</tmpl_loop>

